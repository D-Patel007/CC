// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // e.g. file:./dev.db
}

enum Condition {
  NEW
  LIKE_NEW
  GOOD
  FAIR
  USED
}

model Listing {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  category    String?
  condition   Condition @default(GOOD)
  priceCents  Int
  sellerId    String
  createdAt   DateTime  @default(now())

  @@index([createdAt])
  @@index([category])
}
